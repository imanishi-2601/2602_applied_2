<div class="container user-show">
  <div class="row">
    <!-- 左：User info + New book（サイドバー） -->
    <div class="col-md-3 user-left">
      <h1>User info</h1>

      <div class="avatar-box">
        <% if @user.profile_image.attached? %>
          <%= image_tag @user.profile_image, class: "avatar-image" %>
        <% else %>
          <%= image_tag "no_image.jpg", class: "avatar-image" %>
        <% end %>
      </div>

      <table>
        <tr>
          <th>name</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>introduction</th>
          <td><%= @user.introduction %></td>
        </tr>
      </table>

      <!-- 自分のユーザー編集リンク（テキスト無し） -->
      <%= link_to edit_user_path(@user), class: "user-action-box" do %>
        <i class="fa-solid fa-user-gear"></i>
      <% end %>

      <h1>New book</h1>
      <%= form_with model: @book, url: books_path, local: true do |f| %>
        <h3>Title</h3>
        <%= f.text_field :title %>

        <h3>Opinion</h3>
        <%= f.text_area :body %>

        <div class="mt-2">
        <%= f.submit "Create Book" %>
        </div>

        <% end %>
    </div>

    <!-- 右：投稿一覧 -->
    <div class="col-md-8 offset-md-1 user-right">
      <h1>Books</h1>

      <table class="users-table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user) do %>
                  <% if book.user.profile_image.attached? %>
                    <%= image_tag book.user.profile_image, width: 80, height: 80 %>
                  <% else %>
                    <%= image_tag "no-image.jpg", width: 80, height: 80 %>
                  <% end %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>