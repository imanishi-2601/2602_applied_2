<div class="container">
  <div class="row">
  <!-- 左：自分の情報 -->
  <div class="col-md-3 user-left">
    <h1>User info</h1>

    <div class="profile_image-box">
      <% if @user.avatar.attached? %>
        <%= image_tag @user.avatar, class: "profile_image" %>
      <% else %>
        <%= image_tag "no_image.jpg", class: "profile_image" %>
      <% end %>
    </div>

    <table>
      <tr>
        <th>name</th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th>introduction</th>
        <td><%= @user.introduction %></td>
      </tr>
    </table>

    <%= link_to edit_user_path(@user), class: "user-edit-btn" do %>
      <i class="fa-solid fa-user-gear"></i>
    <% end %>

    <h1>New book</h1>
    <%= form_with model: @book, local: true do |f| %>
      <h3>Title</h3>
      <%= f.text_field :title %>

      <h3>Opinion</h3>
      <%= f.text_area :body %>

      <%= f.submit "Create Book" %>
    <% end %>
  </div>

  <!-- 右：ユーザー一覧 -->
  <div class="col-md-8 offset-md-1 user-right">
    <h1>Users</h1>

    <table class="users-table">
      <thead>
        <tr>
          <th>Image</th>
          <th>Name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <% if user.avatar.attached? %>
                <%= image_tag user.avatar, width: 40, height: 40 %>
              <% else %>
                <%= image_tag "no_image.jpg", width: 40, height: 40 %>
              <% end %>
            </td>

            <td><%= user.name %></td>

            <td>
              <%= link_to "Show", user_path(user) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>